<Page x:Class="QuizGame.View.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizGame.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Авторизация" FontSize="20" Grid.Column="3" Grid.Row="0" Margin="20,10,0,0"/>

        <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding AuthorizationErrorMessage}" VerticalAlignment="Center" Margin="50,30,30,50"/>
        <Label Content="Логин:" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Margin="0,50,30,50"/>
        <TextBox Width="200" Height="25" Grid.Column="3" Grid.Row="2" Margin="0,0,50,0" 
                 Text="{Binding UserModel.Login, UpdateSourceTrigger=PropertyChanged}">
            <TextBox.ToolTip>
                <ToolTip Content="Логин" Placement="Top"/>
            </TextBox.ToolTip>
        </TextBox>

        <Label Content="Пароль:" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" />
        <TextBox Width="200" Height="25" Grid.Column="3" Grid.Row="3" Margin="0,0,50,0"
                 Text="{Binding UserModel.Password, UpdateSourceTrigger=PropertyChanged}">
            <TextBox.ToolTip>
                <ToolTip Content="Пароль" Placement="Top"/>
            </TextBox.ToolTip>
        </TextBox>

        <Button Content="Войти" Grid.Column="3" Grid.Row="5" Width="150" Height="35" HorizontalAlignment="Center" Margin="0,40,50,0" Command="{Binding AuthorizationButton}"/>
    </Grid>
</Page>
